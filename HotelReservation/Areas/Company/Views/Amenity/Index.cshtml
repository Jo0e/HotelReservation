@model IEnumerable<Models.Models.Amenity>

@{
    ViewData["Title"] = "Amenities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Amenities</h1>

<p class="text-center mt-3">
    <a asp-action="Create" class="btn btn-primary">Create New Amenity</a>
</p>

<div class="container mt-4">
    <table class="table table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Img)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <img src="~/images/amenities/@item.Img" alt="@item.Name" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Details</a>
                        <button class="btn btn-sm btn-danger" onclick="confirmDelete('@item.Id')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    // JavaScript for delete confirmation
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this amenity?")) {
            window.location.href = '/Company/Amenity/Delete/' + id;
        }
    }
</script>
