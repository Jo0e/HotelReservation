@model IEnumerable<Models.Models.Amenity>

@{
    ViewData["Title"] = "Amenities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
        ﻿﻿@if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }
}

<br />
<h1>Amenities</h1>
@* <p class="text-center mt-3"> *@
@*     <a asp-action="Create" class="btn btn-primary">Create New Amenity</a> *@
@* </p> *@
<div class="table-responsive ">
    <table class="table table-hover align-middle">
        <thead class="table-dark ">
            <tr>
                <th>Amenity Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <img src="~/images/amenities/@item.Img" alt="Amenity Image" class="img-thumbnail" style="max-width: 100px; height: auto;border-radius: 5px;object-fit: cover;" />
                    </td>
                    <td class=" justify-content-center gap-2 ">
                         <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> 
                         <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>