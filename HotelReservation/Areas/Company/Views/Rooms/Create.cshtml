@using Models.Models
@model Room

@{
    ViewData["Title"] = "Create Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ICollection<RoomType> roomTypes = ViewBag.Type;
}

<style>
    /* General Page Styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f9fc;
        margin: 0;
        padding: 0;
    }

    h1, h4 {
        color: #17a2b8;
        font-size: 2.5rem;
        text-align: center;
        margin-top: 20px;
    }

    h4 {
        font-size: 1.8rem;
    }

    hr {
        border-color: #17a2b8;
        border-width: 2px;
        width: 60%;
        margin: 20px auto;
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-check-label, label {
        font-size: 1.1rem;
        color: #495057;
    }

    .form-select {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        color: #495057;
        border: 1px solid #ced4da;
        border-radius: 5px;
        background-color: #fff;
        transition: all 0.3s ease;
    }

        .form-select:focus {
            border-color: #17a2b8;
            outline: none;
        }

    .form-check-input {
        margin-right: 10px;
    }

    .text-danger {
        font-size: 0.875rem;
        color: #dc3545;
    }

    /* Button Styling */
    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border: 1px solid #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    /* Layout Styling */
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 40px;
    }

    .col-md-4 {
        max-width: 500px;
        width: 100%;
    }

    /* Back Button */
    .btn-back {
        font-size: 1rem;
        color: #007bff;
        text-decoration: none;
        margin-top: 20px;
        display: block;
        text-align: center;
    }

        .btn-back:hover {
            color: #0056b3;
        }

    /* Responsive Design */
    media (max-width: 768px) {
        .form-select

    {
        font-size: 0.95rem;
    }

    .row {
        padding: 0 15px;
    }

    .col-md-4 {
        width: 100%;
    }

    .btn-primary {
        width: 100%;
    }

    }
</style>

<h1>Create Room</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="HotelId" type="hidden" value="@ViewBag.HotelId" />

            <div class="form-group">
                <label asp-for="RoomTypeId" class="control-label"></label>
                <select class="form-select" asp-for="RoomTypeId">
                    <option selected disabled hidden>Choose a room type</option>
                    @foreach (var item in roomTypes)
                    {
                        <option value="@item.Id">@item.Type</option>
                    }
                </select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label asp-for="IsAvailable" class="form-check-label"></label>
                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.HotelId" class="btn-back">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
