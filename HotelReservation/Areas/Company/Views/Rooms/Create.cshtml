@using Models.Models
@model Room

@{
    ViewData["Title"] = "Create Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ICollection<RoomType> roomTypes = ViewBag.Type;
}

<h1>Create Room</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="HotelId" type="hidden" value="@ViewBag.HotelId" />

           
            <div class="form-group">
                <label asp-for="RoomTypeId" class="control-label"></label>
                <select class="form-select" asp-for="RoomTypeId">
                    <option selected disabled hidden>Choose a room type</option>
                    @foreach (var item in roomTypes)
                    {
                        <option value="@item.Id">@item.Type</option>
                    }
                </select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

        
            <div class="form-group form-check">
                <label asp-for="IsAvailable" class="form-check-label"></label>
                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.HotelId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
