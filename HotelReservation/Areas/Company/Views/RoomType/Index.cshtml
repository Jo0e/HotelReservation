@model IEnumerable<Models.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
}
@section Scripts {
            ﻿﻿@if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }

}
<br />
<div class="row">
    <div class="col-9 mb-3">
        <h1>Room Types</h1>
    </div>
    <div class="col-3">
        <a asp-action="Create" asp-route-hotelId="@ViewBag.HotelId" class="btn btn-primary">Create New</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.MaxPersons)</th>
            <th>@Html.DisplayNameFor(model => model.MealPrice)</th>
            <th>@Html.DisplayNameFor(model => model.PricePN)</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.MaxPersons)</td>
                <td>@Html.DisplayFor(modelItem => item.MealPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.PricePN)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
                <td width="20%">
                    <p class="text-muted text-wrap">If the room type connected to exciting rooms it wont delete</p>
                </td>
            </tr>
        }
    </tbody>
</table>
