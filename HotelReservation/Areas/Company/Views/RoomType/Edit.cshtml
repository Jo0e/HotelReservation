@model Models.Models.RoomType

@{
    ViewData["Title"] = "Edit Room Type";
}

<h1>Edit Room Type</h1>

<form asp-action="Edit">
    <input asp-for="Id" type="hidden" />
    <input asp-for="HotelId" type="hidden" value="@ViewBag.HotelId" />

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control" asp-items="@ViewBag.Types"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxPersons" class="control-label"></label>
        <input asp-for="MaxPersons" class="form-control" />
        <span asp-validation-for="MaxPersons" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePN" class="control-label"></label>
        <input asp-for="PricePN" class="form-control" />
        <span asp-validation-for="PricePN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" asp-route-hotelId="@Model.HotelId" class="btn btn-secondary">Back to List</a>
    </div>
</form>
