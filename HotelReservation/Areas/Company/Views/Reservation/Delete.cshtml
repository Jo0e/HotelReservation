
@model Models.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<div>
    <h4>Are you sure you want to delete this reservation?</h4>
    <div>
        <p><strong>Room Count:</strong> @Model.RoomCount</p>
        <p><strong>Adults:</strong> @Model.NAdult</p>
        <p><strong>Children:</strong> @Model.NChildren</p>
        <p><strong>Check-In:</strong> @Model.CheckInDate.ToShortDateString()</p>
        <p><strong>Check-Out:</strong> @Model.CheckOutDate.ToShortDateString()</p>
        <p><strong>Total Price:</strong> @Model.TotalPrice</p>
        <p><strong>UserName:</strong> @Model.User.UserName</p>
    </div>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
