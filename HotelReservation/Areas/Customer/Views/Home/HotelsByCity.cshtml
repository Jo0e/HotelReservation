                                <label class="form-check-label" for="wifi">Wifi</label>
                            </div>    
                           <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="parking" name="amenitiess" value="Parking" @(ViewBag.Amenities != null && ViewBag.Amenities.Contains("Parking") ? "checked" : "")>
                                <label class="form-check-label" for="parking">Parking</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="pool" name="amenitiess" value="Pool" @(ViewBag.Amenities != null && ViewBag.Amenities.Contains("Pool") ? "checked" : "")>
                                <label class="form-check-label" for="pool">Pool</label>
