@model Models.Models.ContactUs

@{
    ViewData["Title"] = "Request Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Comment comment = ViewBag.Comment;
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">User Request Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">User ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserId)</dd>

                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Request Type:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Request)</dd>

                <dt class="col-sm-4">Request:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserRequestString)</dd>

                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">
                    @if (Model.PhoneNumber != null)
                    {
                        @Html.DisplayFor(model => model.PhoneNumber)
                    }
                    else
                    {
                        <span class="text-muted">No Phone Number available.</span>
                    }
                </dd>

                <dt class="col-sm-4">Image Request:</dt>
                <dd class="col-sm-8">
                    @if (Model.UserImgRequest != null)
                    {
                        <img class="img-fluid rounded shadow" style="max-height: 200px;" src="~/images/ContactUsImages/@Model.UserImgRequest" alt="Request Image" />
                    }
                    else
                    {
                        <span class="text-muted">No Image available.</span>
                    }
                </dd>

                <dt class="col-sm-4">Helper:</dt>
                <dd class="col-sm-8">
                    @if (comment != null)
                    {
                        <div class="bg-light p-3 rounded shadow-sm">
                            @Html.Partial("_CommentPartial", comment)
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No comments available.</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#respondModal">
                <i class="bi bi-pencil-square"></i> Respond
            </button>
            <a asp-action="Delete" asp-route-reqId="@Model?.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Respond Modal -->
<div class="modal fade" id="respondModal" tabindex="-1" aria-labelledby="respondModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="respondModalLabel">Respond to Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Respond" method="post">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <div class="mb-3">
                        <label for="messageTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="messageTitle" name="Title" required />
                    </div>
                    <div class="mb-3">
                        <label for="messageContent" class="form-label">Message</label>
                        <textarea class="form-control" id="messageContent" name="MessageString" rows="4" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="messageDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="messageDescription" name="Description" rows="2"></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f9f9f9;
    }

    .card-header {
        font-weight: bold;
    }

    .btn {
        margin-right: 5px;
    }

    img {
        max-width: 100%;
        border: 1px solid #ddd;
        margin-top: 10px;
    }

    .modal-header {
        border-bottom: none;
    }

    .modal-footer {
        border-top: none;
    }
</style>
