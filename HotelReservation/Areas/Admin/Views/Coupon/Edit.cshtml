@using Models.Models
@model Coupon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-warning mb-4">Edit Coupon</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="p-4 shadow-lg rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Code" class="form-label fw-bold">Coupon Code</label>
                    <input asp-for="Code" class="form-control" placeholder="Update coupon code" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Limit" class="form-label fw-bold">Usage Limit</label>
                    <input asp-for="Limit" class="form-control" min="0" placeholder="Update usage limit" />
                    <span asp-validation-for="Limit" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Discount" class="form-label fw-bold">Discount</label>
                    <input asp-for="Discount" class="form-control" min="1" max="99" placeholder="Update discount value" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ExpireDate" class="form-label fw-bold">Expiration Date</label>
                    <input asp-for="ExpireDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpireDate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-label {
        color: #212529;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .shadow-lg {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }
</style>
