@model IEnumerable<Models.Models.RoomType>

@{
    ViewData["Title"] = "Index";
}

<h1>Room Types</h1>

<p>
    <a asp-action="Create" asp-route-hotelId="@ViewBag.HotelId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPersons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePN)
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPersons)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePN)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
