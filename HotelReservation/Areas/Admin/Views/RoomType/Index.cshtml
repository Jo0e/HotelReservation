@model IEnumerable<Models.Models.RoomType>

@{
    ViewData["Title"] = "Index";
}
@section Scripts {
            ﻿﻿@if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }
}
<div class="row">
    <div class="col-9 mb-3">
        <h2>@Model.Select(z => z.Hotel.Name).FirstOrDefault()</h2>

        <h1>Room Types</h1>
    </div>
    <div class="col-3">
        <a asp-action="Create" asp-route-hotelId="@ViewBag.HotelId" class="btn btn-success">Create New</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPersons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealPrice)
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxPersons)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealPrice)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a> |
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Id" data-code="@item.Type">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>



<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the type <strong id="typeCode"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDelete" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var typeId = button.getAttribute('data-id');
            var typeCode = button.getAttribute('data-code');

            // Set the coupon code in the modal
            document.getElementById('typeCode').textContent = typeCode;

            // Set the delete link
            var confirmDelete = document.getElementById('confirmDelete');
            confirmDelete.href = '/Admin/RoomType/Delete?id=' + typeId;
        });
    </script>
    }


