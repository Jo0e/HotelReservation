@model Models.Models.RoomType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>RoomType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="@ViewBag.Types"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPersons" class="control-label"></label>
                <input asp-for="MaxPersons" class="form-control" min="0" />
                <span asp-validation-for="MaxPersons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePN" class="control-label"></label>
                <input asp-for="PricePN" class="form-control" min="0" />
                <span asp-validation-for="PricePN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealPrice" class="control-label"></label>
                <input asp-for="MealPrice" class="form-control" />
                <span asp-validation-for="MealPrice" class="text-danger"></span>
            </div>
            <input asp-for="HotelId" type="hidden">

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
