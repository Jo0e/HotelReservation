@model Models.Models.Amenity

@{
    ViewData["Title"] = "Create Amenity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6 bg-light p-4 rounded shadow">
            <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Amenity Name" required />
                    <label asp-for="Name">Amenity Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Img" class="form-label">Upload Image</label>
                    <input asp-for="Img" type="file" class="form-control" required />
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Create Amenity</button>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa;
    }

    .form-label {
        color: #212529;
    }

    .form-control,
    .form-select {
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .shadow-lg {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }
</style>
