@model IEnumerable<Models.Models.Amenity>

@{
    ViewData["Title"] = "Amenities List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    ﻿﻿@if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }

    @if (TempData["Error"] != null)
    {
        <script>
            toastr.error('@TempData["Error"]');
        </script>
    }
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Create New Amenity</a>
    </div>
    <div class="table-responsive ">
        <table class="table table-hover align-middle">
            <thead class="table-dark text-cente">
                <tr>
                    <th>Amenity Name</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Name</td>
                        <td>
                            <img src="~/images/amenities/@item.Img" alt="Amenity Image" class="img-thumbnail" style="max-width: 100px; height: auto;border-radius: 5px;object-fit: cover;" />
                        </td>
                        <td class=" justify-content-center gap-2 ">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>