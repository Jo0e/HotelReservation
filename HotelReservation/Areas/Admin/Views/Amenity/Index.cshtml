@model IEnumerable<Models.Models.Amenity>

@{
    ViewData["Title"] = "Amenities List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">+ Create New Amenity</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Amenity Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <img src="~/images/amenities/@item.Img" alt="Amenity Image" class="img-thumbnail" style="max-width: 100px;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
