@using Infrastructures.Data
@using Microsoft.AspNetCore.Identity
@using Utilities.Utility
@inject UserManager<IdentityUser> UserManager
@inject ApplicationDbContext Context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelReservation</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelReservation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <div class="container-fluid">
                <h5 style="margin-right:15px;">
                    <i class="bi bi-building"></i> HotelReservation
                </h5>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" style="margin-right:15px;" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-fill"></i> Home
                            </a>
                        </li>
                        @*   <li class="nav-item">
                            <a class="nav-link active" style="margin-right:15px;" asp-area="" asp-controller="ContactUs" asp-action="Create">
                                Contact Us
                            </a>
                        </li> *@
                        @{
                            ApplicationUser user;
                            int messages;
                            int contactUsCount;
                            if (User.Identity.IsAuthenticated)
                            {
                                user = await UserManager.GetUserAsync(User) as ApplicationUser;
                                messages = Context.Message.Where(e => e.UserId == user.Id &&e.IsReadied==false).Count();
                            }
                            else
                            {
                                user = null;
                                messages = 0;
                            }
                            if (await UserManager.IsInRoleAsync(user, SD.AdminRole))
                            {
                                contactUsCount = Context.ContactUs.Where(e => e.IsReadied == false).Count();
                            }
                            else
                            {
                                contactUsCount = 0;
                            }
                        }
                        @if (user != null && user.MessageString != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" style="margin-right:15px;" asp-area="" asp-controller="Inbox" asp-action="Index">
                                    <i class="bi bi-envelope-fill"> @messages</i>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole(SD.AdminRole))
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" style="box-shadow:none;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Dropdown button
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Hotel" asp-action="Index">Hotels</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Amenity" asp-action="Index">Amenity</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="ContactUs" asp-action="Index">ContactUs: <i class="bi bi-chat-right-dots"></i> @contactUsCount </a></li>
                                </ul>
                            </div>
                        }
                        @if (User.IsInRole(SD.CompanyRole))
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Dropdown button
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="Company" asp-controller="Hotels" asp-action="Index">Hotels</a></li>
                                    <li><a class="dropdown-item" asp-area="Company" asp-controller="Amenity" asp-action="Index">Amenity</a></li>
                                </ul>
                            </div>
                        }
                    </ul>
                    <ul class="navbar-nav">

                        <partial name="_LoginPartial.cshtml"></partial>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <style>
        /* Navbar Styling */
        .navbar {
            background: linear-gradient(90deg, #007bff, #0056b3);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            color: #fff !important;
        }

            .navbar-brand i {
                margin-right: 8px;
            }

        .navbar-nav .nav-link {
            color: #ffffffd9;
            font-weight: 500;
            padding: 10px 15px;
            transition: all 0.3s;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.2);
                border-radius: 5px;
            }

        .navbar-toggler-icon {
            filter: brightness(0) invert(1);
        }

        /* Responsive Fixes */
        media (max-width: 992px) {
            .navbar-nav .nav-link

        {
            text-align: center;
            margin: 5px 0;
        }

        }
    </style>
@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HotelReservation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script>
        AOS.init();
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
